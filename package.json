{
  "name": "shoebay",
  "version": "1.0.0",
  "main": "src/app.js",
  "repository": "https://github.com/jaseat/shoebay.git",
  "author": "jaseat <jpseatris@ucdavis.edu>",
  "license": "MIT",
  "scripts": {
    "prepare-db": "sequelize db:drop&sequelize db:create&sequelize db:migrate&sequelize db:seed:all",
    "dev-prepare": "cross-env NODE_ENV=development yarn prepare-db",
    "test-prepare": "cross-env NODE_ENV=test yarn prepare-db",
    "production-prepare": "cross-env NODE_ENV=production yarn prepare-db",
    "install": "cd client && yarn",
    "server": "nodemon src/app.js",
    "client": "cd client && yarn start",
    "dev": "cross-env NODE_ENV=development concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "production-test": "set NODE_ENV=production&&nodemon src/app.js",
    "build": "cd client && yarn build",
    "start": "node src/app.js",
    "start:test": "cross-env NODE_ENV=test yarn server",
    "pretest": "cross-env-shell NODE_ENV=test yarn test-prepare",
    "test": "start-server-and-test start:test http://localhost:3001 test:run",
    "test:run": "cross-env NODE_ENV=test mocha --exit && yarn test-client",
    "test:client": "start-server-and-test start:test http://localhost:3001 test-client",
    "test:server": "cross-env NODE_ENV=test start-server-and-test start:test http://localhost:3001 test-server",
    "test-server": "mocha",
    "test-client": "cd client && yarn test",
    "heroku-postbuild": "yarn production-prepare && cd client && yarn && yarn --only=dev --no-shrinkwrap && yarn build"
  },
  "dependencies": {
    "amazon-product-api": "^0.4.4",
    "bcrypt": "^2.0.1",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.3",
    "connect-session-sequelize": "^5.2.2",
    "cookie-parser": "^1.4.3",
    "dataloader": "^1.4.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "express-session": "^1.15.6",
    "graphql": "^0.13.2",
    "morgan": "^1.9.0",
    "mysql2": "^1.5.3",
    "npm-run-all": "^4.1.3",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "request": "^2.87.0",
    "sequelize": "^4.38.0",
    "sequelize-cli": "^4.0.0",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "concurrently": "^3.6.0",
    "cross-env": "^5.2.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.5",
    "start-server-and-test": "^1.5.0",
    "wait-on": "^2.1.0"
  }
}
